<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung"
    tools:context=".fragments.RestaurantFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_layout_id"
        android:layout_width="409dp"
        android:layout_height="196dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/profile_picture_id"
            android:layout_width="135dp"
            android:layout_height="135dp"
            app:cardCornerRadius="230dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:cardCornerRadius="230dp">

                <ImageView
                    android:id="@+id/this_restaurant_image_id"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/this_restaurant_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/this_restaurant_address_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/first_layout_id"
        tools:layout_editor_absoluteX="-52dp" />

    <TextView
        android:id="@+id/this_restaurant_city_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_address_id"
        tools:layout_editor_absoluteX="-52dp" />

    <TextView
        android:id="@+id/this_restaurant_state_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_city_id"
        tools:layout_editor_absoluteX="-52dp" />

    <TextView
        android:id="@+id/this_restaurant_area_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_state_id"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/this_restaurant_postal_code_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_area_id"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/this_restaurant_country_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_postal_code_id"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/this_restaurant_call_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_country_id"
        app:layout_constraintVertical_bias="0.49"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/this_restaurant_locate_id"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:background="@drawable/ic_baseline_location_on_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/this_restaurant_call_id"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_country_id" />

    <ImageButton
        android:id="@+id/this_restaurant_website_id"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:background="@drawable/ic_baseline_web_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/this_restaurant_locate_id"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_country_id" />

    <ImageButton
        android:id="@+id/this_restaurant_favourite_id"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/this_restaurant_country_id"
        app:layout_constraintVertical_bias="0.49" />

</androidx.constraintlayout.widget.ConstraintLayout>

